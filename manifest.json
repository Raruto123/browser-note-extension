{
  "manifest_version": 3,
  "name": "Notes pour sites web",
  "version": "1.0",
  "description": "Ajoutez des notes à vos sites favoris et soyez notifié lorsque vous les visitez.",
  "permissions": ["storage", "tabs"],
  "host_permissions" : ["<all_urls>"],
  "devtools_page" : "base-popup.html",
  "action": {
    "default_popup": "base-popup.html",
    "default_icon": "images/browser-notes.png"
  },
  "icons": {
    "16": "images/browser-notes 16.png",
    "48": "images/browser-notes.png",
    "128": "images/browser-notes 128.png"
  }
}